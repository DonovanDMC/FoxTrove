<h1><%= @exception.class.to_s %> exception raised</h1>

<p><%= @exception.message.dup.force_encoding("utf-8") %></p>

<h3>Request</h3>
<div class="error-params">
  <pre><%= JSON.pretty_generate(@params) %></pre>
</div>

<h3>Stacktrace</h3>
<div class="error-backtrace">
  <% Rails.backtrace_cleaner.clean(@exception.backtrace).each do |b| %>
    <div class="error-backtrace-line"><%= b %></div>
  <% end %>
</div>
