<%= @artist.errors.full_messages.join(", ") %>
<%= simple_form_for @artist do |f| %>
  <%= f.input :name, as: :string %>
  <%= f.input :url_string, as: :text, label: "Links", input_html: { rows: 10, cols: 50 } %>
  <%= f.input :is_commissioner, as: :boolean, label: "Commissioner" %>
  <%= f.button :submit %>
<% end %>

<% page_title "New Artist" %>
