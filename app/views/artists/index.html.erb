<%= hideable_search(artists_path) do |f| %>
  <%= f.input :name %>
  <%= f.input :e621_tag, label: "E621 Tag" %>
  <%= f.input :url_identifier %>
  <%= f.input :site_type, label: "Site", collection: site_types_collection, include_blank: true %>
  <%= f.input :is_commissioner, label: "Commissioner", collection: [%w[Yes true], %w[No false]], include_blank: true %>
<% end %>

<table class="table full-width">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>URLs</th>
      <th>Last scraped</th>
      <th>Submissions</th>
      <th>Files</th>
      <th>Not Uploaded</th>
      <th>Larger Size</th>
      <th>Larger Dimensions</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.id, artist_path(artist) %></td>
        <td><%= artist.formatted_name %></td>
        <td><%= artist.artist_urls.count %></td>
        <td><%= oldest_last_scraped_at_text(artist) %></td>
        <td><%= artist.submissions.count %></td>
        <td><%= artist.submission_files.count %></td>
        <td><%= link_to artist.not_uploaded.count, artist_path(artist, search: { upload_status: "not_uploaded" }) %></td>
        <td><%= link_to artist.larger_submissions_size.count, artist_path(artist, search: { upload_status: "larger_only_filesize_percentage" }) %></td>
        <td><%= link_to artist.larger_submissions_dimensions.count, artist_path(artist, search: { upload_status: "larger_only_dimensions" }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% page_title "Artists" %>
